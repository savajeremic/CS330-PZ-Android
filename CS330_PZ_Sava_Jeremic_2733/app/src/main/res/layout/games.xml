<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/edtImg"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryLight"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_insert_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"/>

        <EditText
            android:id="@+id/edtName"
            android:layout_below="@id/edtImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_centerHorizontal="true"
            android:ems="15"
            android:textColorHint="@color/colorText"/>

        <EditText
            android:id="@+id/edtGenre"
            android:layout_below="@id/edtName"
            android:hint="Genre"
            android:layout_centerHorizontal="true"
            android:ems="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorText"/>

        <EditText
            android:id="@+id/edtDescription"
            android:layout_below="@id/edtGenre"
            android:hint="Description"
            android:layout_centerHorizontal="true"
            android:ems="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorText"/>

        <EditText
            android:id="@+id/edtCompany"
            android:layout_below="@id/edtDescription"
            android:hint="Company"
            android:layout_centerHorizontal="true"
            android:ems="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorText"/>

        <EditText
            android:id="@+id/edtPrice"
            android:layout_below="@id/edtCompany"
            android:hint="Price"
            android:layout_centerHorizontal="true"
            android:ems="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorText"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_below="@id/edtPrice"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="Save Game"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="19"/>

        <Button
            android:id="@+id/btnList"
            android:layout_below="@id/btnAdd"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="Game List"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="19"/>

    </RelativeLayout>

</ScrollView>